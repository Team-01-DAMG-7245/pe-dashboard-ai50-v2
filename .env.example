# Project ORBIT - Environment Variables Example
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for LLM-based dashboard generation)
OPENAI_API_KEY=your-api-key-here

# AWS Configuration (optional, for S3 storage)
AWS_BUCKET_NAME=quanta-ai50-data
# AWS credentials should be configured via aws configure or AWS_ACCESS_KEY_ID/AWS_SECRET_ACCESS_KEY

# MCP Server Configuration (Phase 2 - Lab 14-15)
MCP_SERVER_URL=http://localhost:9000
MCP_API_KEY=optional-api-key-for-mcp-server

# HITL Server Configuration (Phase 3 - Lab 18)
HITL_BASE_URL=http://localhost:8003
HITL_PORT=8003
HITL_METHOD=cli  # Options: "cli" or "http"

# API Base URL (for dashboard generation endpoints)
API_BASE_URL=http://localhost:8002

# Airflow Configuration (if running outside Docker)
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__DAGS_FOLDER=./dags
